<%- include("./header.ejs") %>
<div class="container" style="margin-top: 3%">
    <div class="row" style="justify-content: center;">
        <div class="col-md-9 text-center ">
            <div >
                <div>
                    <img src="<%= data.image %>" style="padding-top: 10px; width: 500px;">
                </div>
                
                <div >
                    <h4 class="pull-left">Rs <%= data.price%></h4>
                    <h4><a href="#"><%= data.title%></a></h4>
                    <p><%=data.description%></p>
                </div>
                
                <div >
                      <hr>
                       <strong><p>CUSTOMER REVIEWS :></p></strong> 
                        <%data.comment.forEach((ob)=>{%>
                            <div class="row">
                                <div class="col-md-12">
                                    <strong><%=ob.author%></strong>
                                    <p>
                                        <%=ob.content%>
                                    </p>              
                                </div>
                            </div>        
                        <%})%>
                    </div>  
                    <div class="well" style="border-top: 2px solid rgba(238, 177, 238, 0.767);">
                        <p>
                            ADD A REVIEW
                        </p>
                        <form action="/menu/<%=data._id%>/comments/new" method="POST">
                            <label for="comm[author]">NAME :</label>
                        <input type="text" name="comm[author]">
                        <label for="comm[content]">REVIEW :</label>
                        <input type="text"name="comm[content]">
                        <input class="btn btn-info "type="submit" >
                        </form>
                    </div>
        </div>
    
    </div>
</div>
</div>
<br>
<br>

<%- include("./footer.ejs") %>
